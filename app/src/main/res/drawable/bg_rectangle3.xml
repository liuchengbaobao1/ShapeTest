<?xml version="1.0" encoding="utf-8"?><!-- android:shape指定形状类型，默认为rectangle -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- solid指定形状的填充色，只有android:color一个属性 -->
    <solid android:color="#2F90BD" />
    <!-- padding设置内容区域离边界的间距 -->
    <padding
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp" />

    <!-- 设置形状的渐变颜色，可以是线性渐变、辐射渐变、扫描性渐变 -->
    <gradient
        android:angle="0"
        android:endColor="#2F90BD"
        android:startColor="@android:color/white"
        android:type="linear" />
    <!-- corners设置圆角，只适用于rectangle -->
    <corners
        android:bottomLeftRadius="11dp"
        android:bottomRightRadius="11dp"
        android:topLeftRadius="11dp"
        android:topRightRadius="11dp" />
</shape>